# Use Node.js base image with Debian for apt compatibility
FROM node:18

# Install system dependencies including Python and Tesseract
RUN apt-get update && \
    apt-get install -y \
    tesseract-ocr \
    python3 \
    python3-pip \
    python3-distutils \
    build-essential \
    && apt-get clean

# Set working directory
WORKDIR /app

# Copy package files and install Node.js dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the app
COPY . .

# Install Python dependencies (make sure you have a requirements.txt)
RUN pip3 install -r requirements.txt

# Environment variable for Tesseract path (used in your code)
ENV TESSERACT_PATH=/usr/bin/tesseract

# Expose the port your server listens on
EXPOSE 5000

# Start the Node.js app
CMD ["npm", "start"]
